<div class="form-container form-add">
    <form action="/listado/editProduct" method="post">
        <input type="text" name="id_disco" size="5" value="{{product.id_disco}}"
            readonly="readonly">
        <input type="text" placeholder="Año" name="Año" size="50" maxlength="20"
            value="{{product.año}}">
        <input type="text" placeholder="Nombre" name="Nombre" size="50" maxlength="50"
            value="{{product.nombre}}">
        <input type="text" placeholder="Portada" name="Portada" size="50" maxlength="500"
            value="{{product.portada}}">
        <input type="text" placeholder="Contenido" name="Contenido" size="50" maxlength="500"
            value="{{product.contenido}}">
        <div class="btn-group">
            <input type="submit" value="Cambiar">
            <a href="/listado/deleteProduct/{{product.id_disco}}"><input type="button"
            value="Borrar"></a>
            <a href="/listado"><input type="button" value="Cancelar"></a>
        </div>
    </form>
</div>
